<%- include('../partials/head'); %>

<body>
  <%- include('../partials/header'); %>
      <section class="barraBusqueda">        
        <form action="/products/search" method="GET">
            <input id="searchInput" type="text" name="keywords" placeholder="Buscar" size="40">
            <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
        </form>
    </section>

  <h2 class="products-title">Todos los productos</h2>
    <div class="products-wrapper">
			<% for( let i = 0; i < products.length; i++ ) { %>
			        
        <section class="product-card">
          <a href="/products/<%=products[i].id%>">
            <figure class="product-card-img">
              <img class="shop-item-image" src="/images/productsImg/<%=products[i].images[0].image_url%> " alt="imagen de producto">
            </figure>
            <article class="product-card-content">
                  <!-- en proceso mostrar categoria del producto -->
              <h4> <%=products[i].category_id %> </h4>
              
              <h2 class="shop-item-title"><%=products[i].name%></h2>
                  
              <h3 class="shop-item-price" id="price">$<%=products[i].price%></h3>
              <% if(products[i].discount>0){ %> 
                <h3 id="discount"><%=products[i].discount%>% OFF</h3>
              <% } %> 
              <p class="text-center"><%=products[i].description%></p>
            </article>
          </a>
          <div class="btn-container d-flex justify-content-center">
            <button class="btn btn-primary shop-item-button" type="button">AÃ±adir al carro</button>
          </div>
        </section>
    <% } %>
  </div>
</div>
<script src="/js/cart.js" type="text/javascript">    </script>
<!-- BANNERINFO -->

  <%- include('../partials/bannerInfo'); %>
  <script src="/js/cart.js" type="text/javascript">    </script>

<!-- FOOTER -->

  <%- include('../partials/footer'); %>
</body>
</html>
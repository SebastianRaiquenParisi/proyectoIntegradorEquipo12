<%- include('../partials/head'); %>

<body>
    <%- include('../partials/header'); %>

<div class="slideshow-container">

    <div class="mySlides">
      <div class="numbertext">1 / 3</div>
      <img src="images/imagen_slider_1.jpg">
    </div>
  
    <div class="mySlides">
      <div class="numbertext">2 / 3</div>
      <img src="images/imagen_slider_2.jpg">
    </div>
  
    <div class="mySlides">
      <div class="numbertext">3 / 3</div>
      <img src="images/imagen_slider_3.jpg">
    </div>
  
    <a class="prev" onclick="plusSlides(-1)"><i class="fas fa-angle-left"></i></a>
    <a class="next" onclick="plusSlides(1)"><i class="fas fa-angle-right"></i></a>
  </div>
  
  <div class="dotSelect">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>

    <script>
        var slideIndex = 1;
        showSlides(slideIndex);
        
        function plusSlides(n) {
          showSlides(slideIndex += n);
        }
        
        function currentSlide(n) {
          showSlides(slideIndex = n);
        }
        
        function showSlides(n) {
          var i;
          var slides = document.getElementsByClassName("mySlides");
          var dots = document.getElementsByClassName("dot");
          if (n > slides.length) {slideIndex = 1}    
          if (n < 1) {slideIndex = slides.length}
          for (i = 0; i < slides.length; i++) {
              slides[i].style.display = "none";  
          }
          for (i = 0; i < dots.length; i++) {
              dots[i].className = dots[i].className.replace(" active", "");
          }
          slides[slideIndex-1].style.display = "block";  
          dots[slideIndex-1].className += " active";
        }
    </script>

<%- include('../partials/bannerInfo'); %>

    <section class="randomCategory">
        <div class="category-1"></div>
        <div class="category-2"></div>
        <div class="category-3"></div>
    </section>

    <section class="randomProductsList">
      <div class="container products-wrapper">
        <div class="row">
          <div class="col-12">
            <h2 class="products-title">Nuevos Productos</h2>
          </div>
          <!-- Show the "visited" products -->
			<% for( let index = 0; index < products.length; index++ ) { %>
			<% if (products[index].novedad=="Si") { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-card">
            <a href="/products/<%=products[index].id%>">
              <figure class="product-card-img">
                <img src="/images/<%=products[index].image%> " alt="imagen de producto">
              </figure>
              <article class="product-card-content">
                <h2>$<%=products[index].price%></h2>
                <span><%=products[index].discount%> </span>
                <h2><%=products[index].name%></h2>
                <p><%=products[index].description%></p>
              </article>
            </a>
          </section>
        </div>
        <% } %>
    <% } %>
  </div>
</div>
        
    </section>
        
    
    <%- include('../partials/footer'); %>
    
</body>
</html>
<body>
    <%- include('../partials/header'); %>

  <link rel="stylesheet" href="<%=stylesheet%> ">
  
<div class="slideshow-container">

    <div class="mySlides">
      <div class="numbertext">1 / 3</div>
      <img src="images/imagen_slider_1.jpg">
    </div>
  
    <div class="mySlides">
      <div class="numbertext">2 / 3</div>
      <img src="images/imagen_slider_2.jpg">
    </div>
  
    <div class="mySlides">
      <div class="numbertext">3 / 3</div>
      <img src="images/imagen_slider_3.jpg">
    </div>
  
    <a class="prev" onclick="plusSlides(-1)"><i class="fas fa-angle-left"></i></a>
    <a class="next" onclick="plusSlides(1)"><i class="fas fa-angle-right"></i></a>
  </div>
  
  <div class="dotSelect">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>

    <script>
        var slideIndex = 1;
        showSlides(slideIndex);
        
        function plusSlides(n) {
          showSlides(slideIndex += n);
        }
        
        function currentSlide(n) {
          showSlides(slideIndex = n);
        }
        
        function showSlides(n) {
          var i;
          var slides = document.getElementsByClassName("mySlides");
          var dots = document.getElementsByClassName("dot");
          if (n > slides.length) {slideIndex = 1}    
          if (n < 1) {slideIndex = slides.length}
          for (i = 0; i < slides.length; i++) {
              slides[i].style.display = "none";  
          }
          for (i = 0; i < dots.length; i++) {
              dots[i].className = dots[i].className.replace(" active", "");
          }
          slides[slideIndex-1].style.display = "block";  
          dots[slideIndex-1].className += " active";
        }
    </script>

  <!-- Mostrar las categorías destacadas -->
  <div class="category-wrapper">
<% for( let index = 0; index <= 2; index++ ) { %>
    <section class="randomCategory">
        <img src="/images/productsImg/<%=products[index].images[0].image_url%>" alt="imagen de producto">
    </section>
    <% } %>
  </div>

    <h2 class="products-title">Nuevos Productos</h2>
    <div class="products-wrapper">
      
          <!-- Show the "visited" products -->
			<% for( let index = 0; index < products.length; index++ ) { %>
			<% if (products[index].condition=="new in") { %>
        
          <section class="product-card">
            <a href="/products/<%=products[index].id%>">
              <figure class="product-card-img">
                <img src="/images/productsImg/<%=products[index].images[0].image_url%> " alt="imagen de producto">
              </figure>
              <article class="product-card-content">
                <% switch (products[index].category) { 
                   case 't-shirt':%> 
                    <h4>Remera</h4> 
                    <% break;
                  case 'hoodie':%> 
                    <h4>Buzo</h4>
                    <% break;
                  case 'accessory':%> 
                    <h4>Accesorio</h4>
                    <% break;
                    default:%> 
                  <h4>producto madly</h4>
                  <% } %> 
                <h2><%=products[index].name%></h2>
                
                  <h3 id="price">$<%=products[index].price%></h3>
                  <% if(products[index].discount>0){ %> 
                  <h3 id="discount"><%=products[index].discount%>% OFF</h3>
                  <% } %>
              
                <p><%=products[index].description%></p>
              </article>
            </a>
          </section>
       
    
        <% } %>
    <% } %>
</div>


<%- include('../partials/head'); %>

<body>
    <%- include('../partials/header'); %>

    <section class="productForm">


        
            <div class="input">
                <h4>Nuevo Artículo</h4>
            </div>
            <div>
                <h4>Fotos 1/4 - Puedes agregar hasta 4 fotos</h4> <!--debería ir iterando cada foto 2/4 etc.-->
            </div>
            <div class="container">
                <img src="images/logo-1.jpeg" alt="logo" >
                
              </div>
        </div>
            
            
            <div class="input">
                <form>
                    <input type="text" name="inputTitulo" placeholder="Título">
                </form>
            </div>
            <div class="input">
                <form>
                    <input type="text" name="inputPrecio" placeholder="Precio">
                </form>
            </div>
            <div class="input">
                <form action="#categorias">
                    <select id="categorias" name="categorias">
                        <option value="null">Categoría</option>
                        <option value="Remeras">Remeras</option>
                        <option value="Buzos">Buzos</option>
                        <option value="Accesorios">Accesorios</option>
                    </select>
                  </form>
            </div>
            <div class="input">
                <form action="#Talle">
                    <label id="talle" for="XS">XS</label>
                    <input id="seleccionTalle" type="number" id="cantidad" name="cantidad" placeholder="Cantidad"><br>
                    <label id="talle" for="S">S</label>
                    <input id="seleccionTalle" type="number" id="cantidad" name="cantidad" placeholder="Cantidad"><br>
                    <label id="talle" for="M">M</label>
                    <input id="seleccionTalle" type="number" id="cantidad" name="cantidad" placeholder="Cantidad"><br>
                    <label id="talle" for="L">L</label>
                    <input id="seleccionTalle" type="number" id="cantidad" name="cantidad" placeholder="Cantidad"><br>
                    <label id="talle" for="XL">XL</label>
                    <input id="seleccionTalle" type="number" id="cantidad" name="cantidad" placeholder="Cantidad"><br>
                </form>
            </div>
       
            <div class="input">
                <form action="#descripcion">
                    <textarea name="message" rows="10" cols="30" placeholder="Descripción del artículo"></textarea>
                </form>
            </div>
            <div class="choiseDisponible"></div>
            <div class="input">
                
                <form action="#Valoracion">
                    <select id="Valoracion" name="Valoracion">
                        <option value="0">Valoración del Producto</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                  </form>
            </div>
            <div class="input">
                <form action="#Descuento">
                    <input type="number" id="descuento" name="descuento" placeholder="Ingrese % de descuento"><br>
                </form>
            </div>
            <div class="choisePromocion"></div> <!--radio-->
        

        <section class="botonesPie">
            <div class="botonCargar"></div>
        </section>

    </section>
    <%- include('../partials/footer'); %>
    
</body>
</html>
    

    
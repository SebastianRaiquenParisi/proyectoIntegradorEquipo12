<%- include('../partials/head'); %>

<body>
    <%- include('../partials/header'); %>
    
      <div class="center">
      
        <form class="form-container" autocomplete="false" action="/users/login" method="POST">
          <h4>Bienvenid@ a Madly Artsy!</h4>
          
          <div id="img-user">
          <img src="/images/imagen-user-1.jpg" alt="login_user">
        </div>
        
            
              <% if(locals.errors){ 
                errors.forEach(error => {%>
                  <p><% error.msg %></p>
                    <% })
                      }
                        %>
                          
                    
                      <label for="email">Email</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="Introduzca su e-mail">
                      <% if (locals.errors && errors.email) {%> 
                        <div><%=errors.email.msg %> </div>
                        <% } %>
                    
                    <br/>
                    
                      <label for="">Contrase√±a</label>
                      <input type="password" class="form-control" id="password" name="password">
                      <% if (locals.errors && errors.password) {%> 
                        <div><%=errors.password.msg %> </div>
                      <% } %>
                  
                    <br/>
                      <input type="checkbox" class="form-check-input" name="user_remember">
                      <label class="form-check-label">Recordame</label>
                <br/>
            <br/>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
      </div> 
    
    <%- include('../partials/footer'); %>
</body>
</html>
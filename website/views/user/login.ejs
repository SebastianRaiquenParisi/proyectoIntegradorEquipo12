<%- include('../partials/head'); %>

<body>
    <%- include('../partials/header'); %>

    <section class="container-fluid bgLogin">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-6 col-md-3">
                <form class="form-container">
                    <h4>Bienvenid@ a Madly Artsy!</h4>
                    <br/>
                    <% if(locals.errors){ 
                      errors.forEach(error => {%>
                      <p><% error.msg %></p>
                    <% })
                      }
                    %>
                    <br/>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email</label>
                      <input type="text" name="user" class="form-control" id="user" aria-describedby="emailHelp" placeholder="Introduzca su usuario"
                      value:"<%= locals.old && old.user ? old.user : '' %>">
                      
                    </div>
                    <br/>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Contraseña</label>
                      <input type="password" name="pwd" class="form-control" id="pwd" placeholder="Introduzca su contraseña">
                    </div>
                    <br/>
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="recordarme">
                      <label class="form-check-label" name="recordarme" for="exampleCheck1">Recordame</label>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                  </form>
            </section>
        </section>
    </section>
    
    <%- include('../partials/footer'); %>
</body>
</html>
                        <label for="exampleInputEmail1">Usuario</label>
                        <input type="text" name="user" class="form-control" id="user" aria-describedby="emailHelp" placeholder="Introduzca su usuario"
                        value:"<%= locals.old && old.user ? old.user : '' %>">
                        
                      </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email</label>
                      <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Introduzca su e-mail"
                      value:"<%= locals.old && old.email ? old.email : '' %>">
                      
                    </div>
                    
                    <div class="form-group">
                      <label for="exampleInputPassword1">Contrase単a</label>
                      <input type="password" name="pwd" class="form-control" id="pwd" placeholder="Introduzca su contrase単a">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Confirme su contrase単a</label>
                        <input type="password" name="pwd2" class="form-control" id="pwd2" placeholder="Introduzca su contrase単a nuevamente">
                      </div>
                    <br/>
                    <button type="submit" class="btn btn-primary btn-block">Registrarme</button>
                  </form>
            </section>
        </section>
    </section>

    <%- include('../partials/footer'); %>
    
</body>
</html>
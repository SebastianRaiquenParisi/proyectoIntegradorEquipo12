<%- include('../partials/head'); %>

<body>
    <%- include('../partials/header'); %>

    <section class="container-fluid bgLogin">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-6 col-md-4">
              <form action="/users/register" method="POST" autocomplete="off" enctype="multipart/form-data" class="form-container">
                    <h4>Unite a Madly Artsy!</h4>
            
                    <div class="form-group ">
                        <label for="name">Nombre de usuario</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Introduzca un nombre de usuario" value="<%=locals.oldData && oldData.name %>">
                    </div>
                    <% if (locals.errors && errors.name) {%> 
                      <div><%=errors.name.msg %> </div>
                      <% } %>
                    <br/>               

                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Introduzca su e-mail" value="<%=locals.oldData && oldData.email %>">
                    </div>
                    <% if (locals.errors && errors.email) {%> 
                      <div><%=errors.email.msg %> </div>
                      <% } %>
                    <br/>
                    
                    <div class="form-group">
                      <label for="">Contrase√±a</label>
                      <input type="password" id="password" name="password" class="form-control">
                    </div>
                    <br/>
                    <!-- autocomplete off no funciona (revisar)-->
                    
                    <!-- prueba subir archivo multer -->
                    <div class="form-group">
                      <label for="image">Imagen</label>
                      <input type="file" name="image" class="form-control" id="image">
                    </div>
                    <% if (locals.errors && errors.image) {%> 
                      <div><%=errors.image.msg %> </div>
                      <% } %>

                    <br/>
                    <button type="submit" class="btn btn-primary btn-block">Registrarme</button>
              </form>
            </section>
        </section>
    </section>

    <%- include('../partials/footer'); %>
    
</body>
</html>